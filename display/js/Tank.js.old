var Tank = function(onDone, onError) {
  var that = {};

  // Fields
  var loaded = false;
  var errored = false;
  var model = undefined;

  // Private methods
  function setup() {

    TankModelLoader.load()
    .then(function(mesh) {
        model = mesh;
        loaded = true;

        if(onDone !== undefined) {
          onDone(mesh);
        }
    })
    .catch(onError);
  }

  // Public methods
  that.getModel = function() {
    return model;
  };

  that.isLoaded = function() { return loaded; };
  that.isErrored = function() { return errored; };

  // After instantiation, call setup methods
  setup();

  return that;
};
